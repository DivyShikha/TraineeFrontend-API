@page
@model TraineeFrontend.Pages.Course.CreateModel
@{
    ViewData["Title"] = "Create Course";
}

<h2>Create Course</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Course.Title"></label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.Credits"></label>
        <input asp-for="Course.Credits" class="form-control" />
        <span asp-validation-for="Course.Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-page="CourseList" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
